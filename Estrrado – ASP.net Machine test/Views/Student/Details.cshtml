@model Estrrado___ASP.net_Machine_test.Models.Student

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center text-primary mb-4">Student Details</h2>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Student ID:</strong> @Model.StudentId</p>
                <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                <p><strong>Age:</strong> @Model.Age</p>
            </div>
            <div class="col-md-6">
                <p><strong>Date of Birth:</strong> @Model.DOB.ToShortDateString()</p>
                <p><strong>Gender:</strong> @Model.Gender</p>
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            </div>
            <div class="col-md-6">
                <p><strong>Username:</strong> @Model.Username</p>
            </div>
        </div>

        <h3 class="mt-4 text-secondary">Qualifications</h3>
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Course Name</th>
                    <th>University</th>
                    <th>Year</th>
                    <th>Percentage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var qualification in Model.Qualifications)
                {
                    <tr>
                        <td>@qualification.CourseName</td>
                        <td>@qualification.University</td>
                        <td>@qualification.Year</td>
                        <td>@qualification.Percentage%</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>

<!-- Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
